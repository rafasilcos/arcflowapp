{
  "name": "arcflow-backend",
  "version": "1.0.0",
  "description": "ArcFlow SaaS Backend - Sistema de gestão para escritórios AEC com suporte a 10k usuários simultâneos",
  "main": "dist/server.js",
  "scripts": {
    "dev": "node iniciar-backend-seguro.js",
    "dev-unsafe": "node limpar-e-iniciar.js",
    "dev-simple": "node server-simple.js",
    "dev-redis": "node server-redis-escalavel.js",
    "dev-ts": "tsx watch src/server.ts",
    "start": "node server-simple.js",
    "start-redis": "node server-redis-escalavel.js",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "node run-integration-tests.js",
    "test:integration:coverage": "node run-integration-tests.js --coverage",
    "test:integration:watch": "node run-integration-tests.js --watch",
    "test:performance": "jest --config=tests/jest.integration.config.js --testPathPattern=performance",
    "test:e2e": "node tests/integration/run-all-tests.js",
    "test:redis": "node test-pg-redis.js",
    "test:cleanup": "node -e \"require('./tests/setup/globalTeardown')()\"",
    "optimize": "node executar-otimizacoes-performance.js",
    "optimize:indexes": "npx prisma db execute --file migrations/003-performance-indexes.sql",
    "optimize:cache": "node -e \"console.log('Configurando cache Redis...'); require('./src/services/cacheService').createCacheService()\"",
    "optimize:monitor": "node -e \"require('./src/services/performanceMonitorService').default.startMonitoring()\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx src/database/seed.ts",
    "dev:network": "node server-rede-local.js",
    "dev:network-info": "echo \"Backend rodando em: http://192.168.68.145:3001\" && npm run dev:network",
    "start:network": "node server-rede-local.js"
  },
  "keywords": [
    "arcflow",
    "saas",
    "aec",
    "arquitetura",
    "engenharia"
  ],
  "author": "ArcFlow Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@supabase/supabase-js": "^2.50.2",
    "@types/bcrypt": "^5.0.2",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.0",
    "fastify": "^4.28.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.6.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.9.15",
    "pg": "^8.16.3",
    "puppeteer": "^24.11.2",
    "redis": "^4.7.1",
    "sendpulse-api": "^1.1.7",
    "socket.io": "^4.7.5",
    "uuid": "^10.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.13",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.7.5",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "prisma": "^5.22.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
