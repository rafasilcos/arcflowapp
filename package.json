{
  "name": "sistema-arcflow",
  "version": "1.0.0",
  "description": "Sistema de gestão SaaS para escritórios de Arquitetura, Engenharia e Construção",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "validate-naming": "node scripts/validate-naming.js",
    "dev": "cd backend && npm run dev",
    "frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "setup": "cd backend && npm install && cd ../frontend && npm install",
    "lint": "cd frontend && npm run lint",
    "pre-commit": "npm run validate-naming && npm run lint"
  },
  "keywords": [
    "arcflow",
    "arquitetura",
    "engenharia",
    "construção",
    "saas",
    "briefing",
    "gestão"
  ],
  "author": "Rafael - ArcFlow",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "puppeteer": "^24.15.0"
  }
}
